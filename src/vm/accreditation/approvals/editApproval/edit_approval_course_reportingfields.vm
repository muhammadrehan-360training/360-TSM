<head>
    #parse("snippets/accreditation/accreditationDefaultHead.vm")
    
    <script type="text/javascript" language="javascript" src="javascript/360js.js" ></script>
    <script type='text/javascript' src='javascript/jquery.simplemodal.js' ></script>
    <script language="javascript" type="text/javascript">
        $(document).ready(function(){
          	$('#frame_body').height($(window).height() - ($('#frame_header').height()+$('#footer').height()+$('#tabBar').height()));
            if ($('#right-pannel').height()<$('#frame_body').height()) {
                $('#right-pannel').height($('#frame_body').height());
            }            
            $('#sideBar').height($('#right-pannel').height());
            $('#chkAll').click(
               function(){
                  $("INPUT[type='checkbox'][name='reportingField']").attr('checked', $('#chkAll').is(':checked'));
                  $("INPUT[type='checkbox'][name='reportingField']").parent().parent().find("td").css("background-color", $('#chkAll').is(':checked')?"#E9F9FE":"");
               }
            )

            $('#content2a').scroll(function(){
                $('#message_box').animate({top:$('#content2a').scrollTop()+"px" },{queue: false, duration: 350});
            });
            $('#close_message').click(function(){
                $("#message_box").animate({
                   opacity: .5
                }, "slow", "linear", function(){$("#message_box").hide();} );
            });
        });

        function confirm(message, callback) {
            $('#deleteConfirmation').modal({
                close:false,
                position: ["40%",],
                overlayId:'confirmModalOverlay',
                containerId:'confirmModalContainer', 
                onShow: function (dialog) {
                    dialog.data.find('.message_box_text').append(message);

                    // if the user clicks "yes"
                    dialog.data.find('.yes').click(function () {
                        // call the callback
                        if (jQuery.isFunction(callback)) {
                            callback.apply();
                        }
                        // close the dialog
                        jQuery.modal.close();
                    });
                }
            });
        }

        function unAssignReportingField(){
            if ($("INPUT[type='checkbox'][name='reportingField']:checked").length>0) {
                confirm("Are you sure you want to delete credit reporting field(s)?", function () {
                    document.getElementById('actionmethod').value='unAssignReportingFieldsFromApproval';
                    document.manageApprovalForm.submit();
                });
            }else {
                $('#selectReportingField').modal({close:false,position: ["40%",]});
            }
        }

        function changeRowColor(checkbox) {
            var tr=checkbox.parentNode.parentNode;
            var tdarr=$(tr).find("td");
            if (checkbox.checked) {
              for(i=0;i<tdarr.size();i++){
                tdarr[i].style.background="#E9F9FE";
              }

            } else {  
              for(i=0;i<tdarr.size();i++){
                tdarr[i].removeAttribute("style");
              }
            }
        }

        function sortReportingField(sortColumnIndex,sortDirection,pageIndex,showAll){
             document.getElementById('sortColumnIndex').value=sortColumnIndex;
             document.getElementById('sortDirection').value=sortDirection;
             document.getElementById('showAll').value=showAll;
              document.getElementById('pageIndex').value=pageIndex;
             document.getElementById('actionmethod').value='showCourseApprovalReportingFields';
             document.manageApprovalForm.submit();
        }

    </script>
</head>
