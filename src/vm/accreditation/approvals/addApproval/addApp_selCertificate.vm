                        #springBind("approvalForm.showAll")
                        #set($showAll = $status.value)
                        #if($showAll == '')
                                #set($showAll = 'false')
                        #end
                        #springBind("approvalForm.sortColumnIndex")
                        #set($sortColumnIndex = $status.value)
                        <input type="hidden" id="sortColumnIndex" name="sortColumnIndex" value="$status.value" />
                        #springBind("approvalForm.sortDirection")
                        #set($sortDirection = $status.value)
                        <input type="hidden" id="sortDirection" name="sortDirection" value="$status.value" />
                    <tr bgcolor="#efefef">
                        <td class="box_subheader" width="17px" height="20px">&nbsp;</td>
                        <td class="box_subheader" style="border-right:none;"><a onclick=#if($sortDirection == 0) "sortLearner('0','1',$showAll);" #else "sortLearner('0','0',$showAll);" #end ><div id="accountSort" #if($sortColumnIndex == 0 && $sortDirection == 0) class="icon_up" #else class="icon_down" #end ></div>Certificate Name</a></td>
                    </tr>
                    #foreach($loopindex in [$pageFirstIndex..$pageLastIndex])
                            #if($loopindex%2==0)
                                    #set($alternate="row_1")
                            #else
                                    #set($alternate="row_2")
                            #end
                    <tr>
                        #springBind("approvalForm.certificates[$loopindex].id")
                        #set($certId = ${status.value})
                        #springBind("approvalForm.selectedCertificateId")
                        <td class="$alternate" width="17px" height="20px" #if ($!{velocityCount}==$!{currentPageSize}) style="border-bottom:none; border-left:none;" #else style="border-left:none;" #end><input type="radio" js_name="certificateName" name="selectedCertificateId" value="$certId" #if($certId == $!{status.value}) checked #end style="margin-left:0px; margin-top:1px"/></td>
                        #springBind("approvalForm.certificates[$loopindex].name")
                        <td class="$alternate" #if ($!{velocityCount}==$!{currentPageSize}) style="border-bottom:none; border-right:none;" #else style="border-right:none;" #end>$!{status.value}</td>
                    </tr>
                    #end
                    <input id="lastAction" type="hidden" name="action" value="" />
                    <input id="lastShowAll" type="hidden" name="showAll" value="" />
                    <input type="hidden" id="lastPageIndex" name="pageIndex" value="" />
                    <input type="hidden" id="currentpage" name="_page" value="$!{currentStepValue}" />
                    <input type="hidden" id="wizardSubmitter" name="wizardSubmitter" />
                </form>
                </table>
            </div>
            <!-- Search Result End -->
            #end
            
        </div>
        <!-- Search Result End -->

        <!-- *********************************************** -->
		<div class="btn-div">
			<div style="float:right; margin-top:15px;">
			  <a onClick="setAction(); submitButtonForm(document.resultForm,'wizardSubmitter','_target$!{nextStepValue}');">
