       <!-- Search Result Start -->
        <div id="resultBox" class="search_box_result">
        <!-- Result Header Start -->
            <div id="resultHeader" class="box_header">
                <!-- Result Heading -->
                <div style="float:left; height:23px;">
                 <div style="margin-top:3px; margin-left:4px; font-size:13px;text-transform:uppercase;"><b>$brander.getBrandElement("lms.accraditation.editApproval.addCertificate.caption.SelectCertificate")</b></div>
                </div>
                <form name="approvalForm" method="post" action="acc_addApproval.do">

                <div id="searchBox" style="float:left; height:150px; width:280px;left:37%;" class="visible">
                    $brander.getBrandElement("lms.accraditation.editApproval.addCertificate.caption.SearchCertificate")<br/><br/><br/>
                    <div style="float:left">$brander.getBrandElement("lms.accraditation.certificate.caption.name")</div> <input type="text" name="certName" onKeyPress="doEnter(event);" style="font-size:9px; float:right; margin-right:15px; width:170px;" maxlength="20"/><br/><br/><br/><br/>
                    <div style="float:right; margin-top:2px; margin-right:15px;">
                        <div class="btn_start"></div>
                        <div class="btn_normal" onmouseover="this.className='btn_over'" onmouseup="this.className='btn_normal'" onmouseout="this.className='btn_normal'" onclick="search();">$brander.getBrandElement("lms.manageUser.searchLearner.caption.search")</div>
                        <div class="btn_end"></div>
                    </div>
                    <div style="float:right; margin-top:2px; ">
                        <div class="btn_start"></div>
                        <div class="btn_normal" onmouseover="this.className='btn_over'" onmouseup="this.className='btn_normal'" onmouseout="this.className='btn_normal'" onmousedown="showSearchBox(this);">$brander.getBrandElement("lms.manageUser.regInvitation4.preview.button.cancel.caption")</div>
                        <div class="btn_end"></div>
                    </div>
                #springBind("approvalForm.action")
                <input id="action" type="hidden" name="${status.expression}" value="" />
                </div>
                </form>

                <form name="pagingForm" method="post" action="acc_addApproval.do">
                <div class="result_left_side">
                #springBind("approvalForm.certificates")
                #set($certificates = $status.value)
                $pager.setItems($status.value)
                #set($totalCount = $pager.total)
                #if($pager.hasItems())
                        #set($pageFirstIndex = $pager.firstIndex)
                        #set($pageLastIndex = $pager.lastIndex)
                        #set($currentPageSize = $pageLastIndex - $pageFirstIndex + 1)
                        #set($currentPageCount = $pageLastIndex + 1)
                        #set($pageCurrIndex = $pager.index)
                #else
                        #set($pageFirstIndex = 0)
                        #set($pageLastIndex = 0)
                        #set($currentPageSize = 0)
                        #set($currentPageCount = 0)
                        #set($pageCurrIndex = 0)
                #end
                    <!-- Result Description -->
                    <div class="control-button-position">
                        <div class="btn_start"></div>
                        <div class="btn_normal" onmouseover="this.className='btn_over'" onmouseup="this.className='btn_normal'" onmouseout="this.className='btn_normal'" onmousedown="showSearchBox(this);">$brander.getBrandElement("lms.administrator.commonHeader.caption.Search")</div>
                        <div class="btn_end"></div>
                    </div>
                    <!-- All Icon -->
                    <div id="showEach" class="icon_all" onmouseover="showTooltip('Show All', event);" onmouseout="hideTooltip();" onmousedown="onAllSearch();"></div>
                    <!-- Next Icon -->
                #if( $pager.nextIndex )
                    <div id="goNext" class="icon_next" onmouseover="showTooltip('Next', event);" onmouseout="hideTooltip();" onclick="onNextPage($pager.nextIndex);"></div>
                #else
                    <div id="goNext" class="icon_disabled">&nbsp;</div>
                #end
                    <!-- Back Icon -->
                #if( $pager.prevIndex )
                    <div id="goBack" class="icon_back" onmouseover="showTooltip('Back', event);" onmouseout="hideTooltip();" onclick="onPreviousPage($pager.prevIndex);"></div>
                #else
                    <div id="goBack" class="icon_disabled">&nbsp;</div>
                #end
                    <!-- Showing Results -->
                #if($totalCount>1)
                    <div id="resultDescription" class="box_description"> $brander.getBrandElement("lms.accreditation.caption.Showing") $!pager.pageDescription</div>
                #else
                     <div id="resultDescription" class="box_description"> $brander.getBrandElement("lms.accreditation.caption.Showing") 0 - $totalCount of $totalCount</div>
                #end
                </div>
                <input type="hidden" id="pageIndex" name="pageIndex" value="$pager.index" />
                <input id="showAll" type="hidden" name="showAll" value="" />
                <input id="gridAction" type="hidden" name="action" value="" />
                <input type="hidden" id="pageCurrIndex" name="pageCurrIndex" value="$pageCurrIndex" />
                </form>
            </div>
            <!-- Result Header End -->

            <!-- Result Subheader Start -->
            #if($currentPageSize == 0)
            <div id="searchResult_1">
                <table width="100%" cellpadding="0" cellspacing="0" style="margin-top:1px;">
                    <form name="resultForm" method="post" action="acc_addApproval.do">
                          <tr bgcolor="#efefef">
                            <td class="box_subheader" width="17px" height="20px"></td>
