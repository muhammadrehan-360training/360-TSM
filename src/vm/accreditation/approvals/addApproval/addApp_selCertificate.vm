                    </form>
                </table>
                  <div class="result_blank">#if(! $request.getAttribute("newPage")) $brander.getBrandElement("lms.searchLearner.caption.noRecordFound") #else To find a certificate click on the Search button above #end</div>
            </div>
            <!-- Result Subheader End -->
