<body>
        <table id="table-layout" border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td id="header" colspan="2">
    <!-- header -->
    #if($userData.isLMSAdministrator() && $adminCurrentMode == 'ROLE_LMSADMINISTRATOR')
        #parse("snippets/adminHeader.vm")
