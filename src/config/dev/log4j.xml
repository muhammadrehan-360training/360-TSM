<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <!-- Appenders -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p: [%d{MMM-dd HH:mm:ss,SSS}] %c{3} - %m%n" />
        </layout>
    </appender>
    <!-- File Appender -->

    <appender name="file" class="org.apache.log4j.DailyRollingFileAppender">
       <param name="File" value="${catalina.home}/logs/vu360-lms.log"/>
       <param name="DatePattern" value="'.'yyyy-MM-dd" />
       <param name="MaxBackupIndex" value="20"/>
       <layout class="org.apache.log4j.PatternLayout">
          <param name="ConversionPattern" value="[%p] %d %c %M - %m%n"/>
       </layout>
    </appender>
    <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%p [%c{3}] %m%n"/>
        </layout>
    </appender>
    <logger name="com.softech">
        <level value="ERROR"/>
    </logger>
    <logger name="com.softech.vu360.lms.util.UserPermissionChecker">
        <level value="ERROR"/>
    </logger>
    <logger name="javax.naming.directory">
        <level value="INFO"/>
        <appender-ref ref="stdout"/>
        <appender-ref ref="rolling"/>
    </logger>
    <logger name="org.hibernate.SQL">
        <level value="ALL"/>
    </logger>
    <logger name="org.springframework.ws.client.MessageTracing.received">
        <level value="ERROR"/>
    </logger>
    <logger name="org.springframework.ws.client.MessageTracing.sent">
        <level value="ERROR"/>
    </logger>
    <logger name="org.springframework.ws.server.MessageTracing">
        <level value="ERROR"/>
    </logger>
    <root>
        <level value="ERROR"/>
        <appender-ref ref="stdout"/>
        <appender-ref ref="rolling"/>
    </root>
</log4j:configuration>